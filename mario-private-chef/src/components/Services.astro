const services = [
  {
    title: 'Breakfast',
    description: 'Start your morning with a freshly prepared breakfast tailored to your preferences. From tropical fruits to gourmet eggs benedict — every morning made special.',
    image: '/images/service-breakfast.jpg',
  },
  {
    title: 'Lunch',
    description: 'A midday experience crafted around fresh, local ingredients. Light or hearty — Mario designs each lunch to match your mood and occasion.',
    image: '/images/service-lunch.jpg',
  },
  {
    title: 'Dinner',
    description: 'The main event. An intimate, multi-course dinner experience prepared in your space. Fine dining without the restaurant — just exceptional food and company.',
    image: '/images/service-dinner.jpg',
  },
  {
    title: 'Dessert',
    description: 'The perfect ending. From classic pastries to creative sweet creations, Mario crafts desserts that leave a lasting impression.',
    image: '/images/service-dessert.jpg',
  },
]
---

<section id="services" class="relative py-24 md:py-32 bg-dark-light">
  <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>

  <div class="text-center mb-20 px-6 md:px-20 lg:px-32 xl:px-48" data-aos="fade-up">
    <p class="text-primary text-sm uppercase tracking-[0.4em] mb-3 font-body">What I Offer</p>
    <h2 class="font-heading text-4xl md:text-5xl lg:text-6xl font-light text-white">
      Culinary <span class="text-primary italic">Services</span>
    </h2>
    <p class="mt-4 text-gray-light font-body font-light mx-auto" style="max-width: 36rem;">
      No fixed menus. Tell me what you're craving and I'll make it happen.
    </p>
  </div>

  <div class="px-6 md:px-20 lg:px-32 xl:px-48">
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8">
      {services.map((service, i) => (
        <div class="group relative overflow-hidden h-[350px] md:h-[400px]" data-aos="fade-up" data-aos-delay={i * 150}>
          <img src={service.image} alt={service.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
          <div class="absolute inset-0 bg-dark/60 group-hover:bg-dark/75 transition-all duration-500"></div>
          <div class="relative z-10 h-full flex flex-col justify-end p-8 md:p-10">
            <div class="transform transition-transform duration-500 group-hover:-translate-y-2">
              <span class="text-primary font-heading text-lg italic">0{i + 1}</span>
              <h3 class="font-heading text-3xl md:text-4xl text-white mt-1 mb-3">{service.title}</h3>
              <p class="text-gray-light font-body font-light text-sm leading-relaxed max-w-md opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                {service.description}
              </p>
            </div>
          </div>
          <div class="absolute top-6 right-6 w-8 h-8 border-t border-r border-primary/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </div>
      ))}
    </div>
  </div>

  <div class="text-center mt-16 px-6 md:px-20 lg:px-32 xl:px-48" data-aos="fade-up">
    <p class="text-gray-light font-body font-light mb-4">Have something specific in mind?</p>
    <a href="https://wa.me/50686307133" target="_blank" class="inline-flex items-center gap-3 border border-primary text-primary text-sm uppercase tracking-[0.2em] px-8 py-3.5 hover:bg-primary hover:text-dark transition-all duration-300">
      Let's Talk
    </a>
  </div>
</section>